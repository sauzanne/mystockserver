<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
	monitoring="autodetect" dynamicConfig="true"
	maxBytesLocalHeap="${ehcache.maxbyteslocalheap}"
	maxBytesLocalDisk="${ehcache.maxbyteslocaldisk}">

	<diskStore path="${ehcache.diskstore.path}" />

	<cache name="financeCacheShortTime" eternal="false"
		timeToLiveSeconds="300" memoryStoreEvictionPolicy="LFU"
		transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>

	<cache name="financeCacheOneHour" eternal="false"
		timeToIdleSeconds="3600" timeToLiveSeconds="7200"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>


</ehcache>